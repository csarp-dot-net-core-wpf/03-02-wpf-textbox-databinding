<Window x:Class="SquareAreaDistrictWPFProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SquareAreaDistrictWPFProject"
        mc:Ignorable="d"
        Title="Négyzet területe és kerülete" Height="250" Width="400">
        <!-- B1.01 Ablak cím és keret -->
    <!-- B1.02 StackPanel elrendezés -->
    <StackPanel>
        <!-- B1.03 Feliratok (textblock) -->
        <TextBlock x:Name="tbSuareSide"  Margin="20 10 20 0">A négyzet oldala:</TextBlock>
        <!-- B1.04 Adatbeviteli mező (négyzet oldala) -->
        <!-- Ezt a vezérlőt használjuk leggyakrabban a felhasználóval való interakcióra. A felhasználó számára szöveges beviteli  lehetőség.-->
        <TextBox x:Name="txtSide" Margin="20 0 20 30" />
        
        <TextBlock x:Name="tbDistrict" Margin="30 10 30 0">A négyzet kerülete:</TextBlock>
        <TextBlock x:Name="tbArea" Margin="30 10 30 0">A négyzet területe:</TextBlock>
    </StackPanel>
</Window>
